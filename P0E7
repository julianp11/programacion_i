package cursada_progra_inicio;
import java.util.Scanner;
public class Ejercicio {

	public static float calcular (Scanner n1, Scanner n2) {
		float a = n1.nextFloat();
		float b = n2.nextFloat();
		
		float c = (a + b) / 2 ;
		return c;
	}
	
	public static int imprimirPromedio(int a, int b) {		
		int c = (a + b) /2 ;
		return c ;
	}
	
	
	
	
	public static void main(String[] args) {
		Scanner n1 = new Scanner(System.in);
		System.out.println("Decime un numero");
		Scanner n2 = new Scanner(System.in);
		System.out.println("Decime otro numero");
		
		int a = n1.nextInt();
		int b = n2.nextInt();
		
		int resultado = imprimirPromedio(a, b);
	
		System.out.println("Suma: " + resultado );
		n1.close();
		n2.close();
	}

}
